{
  "name": "Event Details",
  "baseSelector": "div.pincard",
  "fields": [
    {
      "name": "image",
      "selector": "div.pincard__imageSection a img",
      "type": "attribute",
      "attribute": "src",
      "transform": {
        "type": "regex",
        "pattern": "^//",
        "replacement": "https://"
      }
    },
    {
      "name": "eventDate",
      "selector": "div.d-when",
      "type": "text"
    },
    {
      "name": "startTime",
      "selector": "div.d-when",
      "type": "text",
      "transform": {
        "type": "regex",
        "pattern": "^(.*?\\d{1,2}:\\d{2}(?:am|pm))",
        "replacement": "$1"
      }
    },
    {
      "name": "endTime",
      "selector": "div.d-when",
      "type": "text",
      "transform": {
        "type": "regex",
        "pattern": "-\\s*(\\d{1,2}:\\d{2}(?:am|pm))",
        "replacement": "$1"
      }
    },
    {
      "name": "title",
      "selector": "h3.d-title a",
      "type": "text"
    },
    {
      "name": "description",
      "selector": "div.pincard__main__preview",
      "type": "text",
      "default": "N/A"
    }
  ]
}