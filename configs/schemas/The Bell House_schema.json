{
  "name": "Event Details Extraction",
  "baseSelector": "div.event-container",
  "fields": [
    {
      "name": "image",
      "selector": "img.event-image",
      "type": "attribute",
      "attribute": "src"
    },
    {
      "name": "eventDate",
      "selector": "div.event-date",
      "type": "text"
    },
    {
      "name": "startTime",
      "selector": "div.event-time",
      "type": "text",
      "regex": {
        "pattern": "(.*?)(?: - )(.*)",
        "group": 1
      }
    },
    {
      "name": "endTime",
      "selector": "div.event-time",
      "type": "text",
      "regex": {
        "pattern": "(.*?)(?: - )(.*)",
        "group": 2
      }
    },
    {
      "name": "title",
      "selector": "h3.event-title",
      "type": "text"
    },
    {
      "name": "description",
      "selector": "div.event-description",
      "type": "text"
    }
  ]
}